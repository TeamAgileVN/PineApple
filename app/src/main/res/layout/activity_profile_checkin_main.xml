<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    tools:context="com.zellycookies.pineapple.main.ProfileCheckinMain">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- contain back activity -->
        <include layout="@layout/layout_top_navigation_back"/>

        <com.zellycookies.pineapple.utils.SquareImageView
            android:id="@+id/profileImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:contentDescription="Click to change profile photo"/>

        <TextView
            android:id="@+id/name_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rose_j"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/iciel_cadena"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/dob_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/august_5th_2001_male"
            android:fontFamily="@font/bubbler_one"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryGrey"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/distance_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="5 miles away"
            android:textSize="18sp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/white"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryGrey"
            android:text="@string/about"
            android:fontFamily="@font/bubbler_one"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"/>

        <TextView
            android:id="@+id/bio_beforematch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/something_about_victoria"
            android:fontFamily="@font/bubbler_one"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryGrey"
            android:text="@string/interests"
            android:fontFamily="@font/bubbler_one"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"/>

        <TextView
            android:id="@+id/interests_beforematch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dancing, Traveling, Love"
            android:fontFamily="@font/bubbler_one"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryGrey"
            android:text="@string/additional_images"
            android:fontFamily="@font/bubbler_one"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"/>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/layout_image_upper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <com.zellycookies.pineapple.utils.SquareImageView
                android:id="@+id/image_1"
                android:layout_width="204dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop" />

            <com.zellycookies.pineapple.utils.SquareImageView
                android:id="@+id/image_2"
                android:layout_width="204dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/layout_image_lower"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <com.zellycookies.pineapple.utils.SquareImageView
                android:id="@+id/image_3"
                android:layout_width="204dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop" />

            <com.zellycookies.pineapple.utils.SquareImageView
                android:id="@+id/image_4"
                android:layout_width="204dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </LinearLayout>


</ScrollView>
