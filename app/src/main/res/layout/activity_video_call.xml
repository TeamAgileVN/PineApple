<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".conversation.CallActivity"
    >
    <WebView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/webView" />
    <!-- contain back activity -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/callLayout">

        <include layout="@layout/layout_top_navigation_chat" />

        <TextView
            android:id="@+id/incomingCallTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:padding="20dp"
            android:textStyle="bold"
            android:textAlignment="center"
            tools:text="Someone is calling..." />

        <LinearLayout
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



            <ImageView
                android:id="@+id/acceptBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/rejectBtn"
                android:padding="20dp"
                android:layout_marginLeft="120dp"
                android:src="@drawable/ic_baseline_call_24" />

            <ImageView
                android:id="@+id/rejectBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="30dp"
                android:padding="20dp"
                android:src="@drawable/ic_baseline_call_end_24" />


        </LinearLayout>




    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="550dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:id="@+id/callControlLayout"
        >

        <ImageView
            android:id="@+id/toggleVideoBtn"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="#99000000"
            android:layout_marginLeft="140dp"
            android:padding="4dp"
            android:src="@drawable/ic_baseline_videocam_24" />

        <ImageView
            android:id="@+id/toggleAudioBtn"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="50dp"
            android:background="#99000000"
            android:padding="4dp"
            android:src="@drawable/ic_baseline_mic_24" />
    </LinearLayout>


</RelativeLayout>

